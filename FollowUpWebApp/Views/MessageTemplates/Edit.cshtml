@model FollowUpWebApp.Models.MessageTemplate

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>MessageTemplate</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MessageTemplateId)

        <div class="form-group">
            @Html.LabelFor(model => model.MessagingType, htmlAttributes: new { @class = "control-label col-md-2" })
